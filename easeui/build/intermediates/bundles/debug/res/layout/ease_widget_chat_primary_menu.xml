<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_marginTop="8dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#aaffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_press_to_speak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/ease_chat_press_speak_btn"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_speak_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:text="@string/button_pushtotalk"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edittext_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_sendmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dip"
                    android:background="@drawable/shape_bg_edittext_focused"
                    android:imeOptions="actionSend"
                    android:maxLines="3"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape_gray"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="@string/button_send"
                android:textColor="@android:color/white"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_set_mode_voice"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_weight="1"
                android:src="@drawable/chatting_set_voice_img" />

            <ImageView
                android:id="@+id/iv_set_photo"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_weight="1"
                android:src="@drawable/chatting_set_pic_img" />

            <ImageView
                android:id="@+id/iv_set_camaer"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_weight="1"
                android:src="@drawable/chatting_set_camera_img" />

            <ImageView
                android:id="@+id/iv_set_file"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_weight="1"
                android:src="@drawable/chatting_set_file_img" />


            <RelativeLayout
                android:id="@+id/rl_face"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_face_normal"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/chatting_set_face_img" />

                <!--<ImageView
                    android:id="@+id/iv_face_checked"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_margin="1dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ease_chatting_biaoqing_btn_enable"
                    android:visibility="invisible" />-->

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_weight="1"
                android:src="@drawable/ease_type_select_btn" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>