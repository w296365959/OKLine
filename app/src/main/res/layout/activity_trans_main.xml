<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trans_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/trans_bottom"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认收款账号信息"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/trans_next"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="下一步"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/transAccount_green"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/trans_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_toolbar"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_above="@id/trans_bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/trans_running_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/trans_state_button_bg">
                    <TextView
                        android:id="@+id/trans_state_running"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进行中("
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                    <TextView
                        android:id="@+id/trans_running_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                    <TextView
                        android:id="@+id/trans_state_running1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/trans_complete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/trans_state_button_bg">
                    <TextView
                        android:id="@+id/trans_state_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成("
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                    <TextView
                        android:id="@+id/trans_complete_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                    <TextView
                        android:id="@+id/trans_state_complete1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textSize="14sp"
                        android:textColor="@drawable/trans_state_textcolor_change"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_line"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/trans_record_listView"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>
    <!--<HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/view1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <GridView
                android:id="@+id/trans_record_gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:overScrollMode="never"
                android:stretchMode="spacingWidthUniform" >
            </GridView>
        </LinearLayout>
    </HorizontalScrollView>-->
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="7dp"
        android:background="@color/app_line"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                >

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:tabBackground="@color/white"
                    app:tabIndicatorColor="@color/black"
                    app:tabIndicatorHeight="3dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#dfdfdf"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="转账方"
                    android:textSize="14sp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/transAccount_green"
                    android:gravity="center_vertical"
                    android:id="@+id/textView5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="7dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/transfer_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/transfer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利益"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/transfer_img"/>
                    <TextView
                        android:id="@+id/transfer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123123"
                        android:textSize="10sp"
                        android:textColor="#8f8f8f"
                        android:layout_below="@id/transfer_name"
                        android:layout_toRightOf="@id/transfer_img"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/app_line"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="选择我的银行卡"
                    android:textSize="14sp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/transAccount_green"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/app_line"/>
                <com.vboss.okline.ui.transAccount.LineEditText
                    android:id="@+id/trans_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入转账金额"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColorHint="#7d7d7d"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:background="@null"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/bg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="收款人信息"
                    android:textSize="14sp"
                    android:paddingLeft="7dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/app_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="7dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/payee_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/payee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利益"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/payee_img"/>
                    <TextView
                        android:id="@+id/payee_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123123"
                        android:textSize="10sp"
                        android:textColor="#8f8f8f"
                        android:layout_below="@id/payee_name"
                        android:layout_toRightOf="@id/payee_img"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/app_line"
                        android:layout_toRightOf="@id/payee_img"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/trans_noInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无收款信息，待对方提供"
                    android:textSize="14sp"
                    android:visibility="gone"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/payee_bankCard"
                    android:layout_width="63dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="59dp"/>
                <TextView
                    android:id="@+id/trans_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待对方确认收款账号信息"
                    android:textSize="14sp"
                    android:textColor="@color/transAccount_green"
                    android:layout_marginLeft="59dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/payee_bank_info"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingLeft="7dp"
                    android:layout_marginLeft="59dp"
                    android:visibility="gone">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/payee_bankImg"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/payee_bankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工商银行储蓄卡"
                        android:textSize="14sp"
                        android:textColor="#737373"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/payee_bankImg"/>
                    <TextView
                        android:id="@+id/payee_bankName_persion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杨欣"
                        android:textColor="#737373"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="26dp"
                        android:layout_toRightOf="@id/payee_bankName"/>
                    <TextView
                        android:id="@+id/payee_bankPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123123"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:layout_below="@id/payee_bankName"
                        android:layout_toRightOf="@id/payee_bankImg"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_line"
                android:layout_below="@id/content"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
