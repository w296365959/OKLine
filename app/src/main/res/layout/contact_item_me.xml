<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_item_height"
        android:background="@drawable/settings_item_selector">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_contact_avatar"
            android:layout_width="@dimen/contact_item_avatar_width"
            android:layout_height="@dimen/contact_item_avatar_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="7dp"
            android:src="@mipmap/default_avatar"
            fresco:placeholderImage="@mipmap/default_avatar"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="3dp"/>

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_contact_avatar"
            android:gravity="center_vertical"
            android:text="我"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="47dp"
            android:layout_height="@dimen/contact_item_avatar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_contact_button_normal"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="15sp"/>


    </RelativeLayout>
</LinearLayout>