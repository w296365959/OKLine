<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/bg"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="来自刘易要给你转¥"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9000.00"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/trans_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账成功"
            android:layout_marginLeft="7dp"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/trans_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-6-6 12:29"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg"/>
    <TextView
        android:id="@+id/trans_pay_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="转账方"
        android:paddingLeft="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="14dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="7dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/trans_pay_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/trans_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利益"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/trans_pay_img"/>
        <TextView
            android:id="@+id/trans_pay_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123123"
            android:textSize="10sp"
            android:textColor="#8f8f8f"
            android:layout_below="@id/trans_pay_name"
            android:layout_toRightOf="@id/trans_pay_img"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line"
            android:layout_toRightOf="@id/trans_pay_img"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="59dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账:"
            android:textSize="14sp"
            android:layout_marginLeft="59dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/trans_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="198.00"
            android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg"/>
    <TextView
        android:id="@+id/trans_payee_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="转账方"
        android:paddingLeft="7dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="14dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_line"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingLeft="7dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/trans_payee_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/trans_payee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利益"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/trans_payee_img"/>
            <TextView
                android:id="@+id/trans_payee_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123123123"
                android:textSize="10sp"
                android:textColor="#8f8f8f"
                android:layout_below="@id/trans_payee_name"
                android:layout_toRightOf="@id/trans_payee_img"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/info_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_line"
                android:layout_toRightOf="@id/trans_payee_img"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="59dp"
                android:layout_below="@id/info_view"
                app:actualImageScaleType="fitXY"
                app:placeholderImageScaleType="fitXY"
                app:placeholderImage ="@mipmap/image_card_default"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/info_confirm_img"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:visibility="gone"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款:"
            android:textSize="14sp"
            android:layout_marginLeft="59dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/trans_payee_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="198.00"
            android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/payee_bank_info"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="7dp"
        android:layout_marginLeft="59dp"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/payee_bankImg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/payee_bankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工商银行储蓄卡"
            android:textSize="14sp"
            android:textColor="#737373"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/payee_bankImg"/>
        <TextView
            android:id="@+id/payee_bankName_persion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杨欣"
            android:textColor="#737373"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@id/payee_bankName"/>
        <TextView
            android:id="@+id/payee_bankPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123123"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_below="@id/payee_bankName"
            android:layout_toRightOf="@id/payee_bankImg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="添加/修改收款银行信息"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/transAccount_green"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="59dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/trans_running_bg"/>
</LinearLayout>
