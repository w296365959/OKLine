<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_12"
            />

        <TextView
            android:id="@+id/tv_log_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_log_date"
            android:layout_below="@id/tv_log_date"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxEms="8"
            android:maxLines="1"
            android:minWidth="110dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_12"
            />


        <LinearLayout
            android:id="@+id/layout_log_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_log_date"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tv_log_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_print_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/card_log_ticket"
                android:src="@mipmap/ic_log_ticket"/>

            <ImageButton
                android:id="@+id/ib_print_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/transparent"
                android:contentDescription="@string/card_log_pos_1"
                android:src="@mipmap/ic_log_pos"/>

            <ImageButton
                android:id="@+id/ib_print_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@color/transparent"
                android:contentDescription="@string/card_log_invoice"
                android:src="@mipmap/ic_log_invoice"/>


