<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_upgrade_dialog_title"
            android:textColor="@color/black_light"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="APP更新：\n1.海军来了\n2、快闪啊"
            android:textColor="@color/colorTabText"
            android:textSize="16dp" />
    </LinearLayout>

    <View style="@style/line_gray_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="残忍拒绝"
            android:textColor="@color/color_dialog_default_cancel"
            android:textSize="16dp" />

        <View style="@style/line_gray_vertical" />

        <TextView
            android:id="@+id/rightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/upgrade_dialog_btn_right"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>