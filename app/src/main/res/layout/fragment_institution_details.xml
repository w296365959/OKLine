<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.vboss.okline.ui.record.InstitutionDetailsFragment">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@android:color/black"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:navigationIcon="@drawable/ic_status_back"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:titleTextColor="@android:color/white">


        <TextView
            android:id="@+id/action_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/actionBarTitleSize"/>

        <ImageButton
            android:id="@+id/action_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_search"
            />

    </android.support.v7.widget.Toolbar>

    <com.vboss.okline.ui.user.customized.AutoLoadListView
        android:layout_marginTop="@dimen/actionBarSize"
        android:id="@+id/lv_institution_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
