<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_star_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/shape_add_star_top">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pop_img"
            android:layout_width="@dimen/add_star_title_img"
            android:layout_height="@dimen/add_star_title_img"
            android:layout_marginLeft="@dimen/add_star_title_img_marginleft"/>

        <TextView
            android:id="@+id/pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_star_title_name_marginleft"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/add_star_title_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/shape_add_star_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/add_star"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/popupwindow_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_grey"/>

            <TextView
                android:id="@+id/star_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/add_star_title_name"
                android:layout_marginTop="@dimen/add_star_star_name_margin"
                android:text="@string/add_star"/>
        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/app_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_star_star_name_margin"
                android:textSize="@dimen/add_star_title_name"
                android:text="@string/add_delete"/>
        </LinearLayout>-->
    </LinearLayout>
</LinearLayout>
