<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color_card_background"
    android:orientation="vertical">

    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/toolbar_contact_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/ll_create_con_phone"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_account_name"
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="户名："/>

        <TextView
            android:id="@+id/tv_company_name"
            style="@style/Text_14sp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_account_name"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <com.vboss.okline.view.widget.ClearEditText
            android:id="@+id/et_account_name"
            style="@style/inputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_account_name"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        style="@style/underline_margin7"/>

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="账号："/>

        <com.vboss.okline.view.widget.ClearEditText
            android:id="@+id/et_my_account"
            style="@style/inputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <View
        style="@style/underline_margin7"/>

    <LinearLayout
        android:id="@+id/ll_choose_bank"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            style="@style/Text_14sp_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="银行："/>

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/arrowright"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save_bank"
        android:layout_width="@dimen/add_button_width"
        android:layout_height="@dimen/add_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/add_button_topmargin"
        android:background="@drawable/contact_button_click_selector"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="15sp"/>


</LinearLayout>