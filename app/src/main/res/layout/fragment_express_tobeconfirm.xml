<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/express_company_rv"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="@dimen/margin_12">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/express_null_company_tv"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:gravity="center"
                android:text="暂无快递信息"
                android:textSize="14sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/bg"></View>
            <!--快递信息-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_48"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/send_message_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:text="发快递信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/express_send_message_kd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/express_send_message_kd_iv"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:text="顺丰快递"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />

                <ImageView
                    android:id="@+id/express_send_message_kd_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/express_arrow_down" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/express_send_message_kd_tv"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <View

                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/common_margin_20"
                        android:layout_marginRight="@dimen/common_margin_5"
                        android:background="@color/dimgrey"></View>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/common_margin_5"
                android:background="@color/bg"></View>

            <!--下面这个是发快递信息-->

            <TextView
                android:id="@+id/express_to_be_confirmed_new_textView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_24"
                android:background="@color/app_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_7"
                android:text="新快递,刘毅要给你发快递"
                android:textColor="@color/brick_red"
                android:textSize="@dimen/textSize_13" />


            <include layout="@layout/item_express_send_message"></include>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/common_margin_10"
                android:background="@color/app_line"></View>

            <!--下面是收快递信息-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:layout_marginLeft="@dimen/common_margin_10"
                android:layout_marginTop="@dimen/common_margin_5"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/accept_message_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accept_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />
            </RelativeLayout>

            <include layout="@layout/item_express_accept_message"></include>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/common_margin_5"
                android:background="@color/white"></View>

            <View
                android:id="@+id/express_message_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@color/bg"
                android:visibility="gone"></View>
        </LinearLayout>
    </ScrollView>
</FrameLayout>