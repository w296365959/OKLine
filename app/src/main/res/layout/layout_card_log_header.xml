<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="7dp">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_card"
            android:layout_width="@dimen/card_log_image_width"
            android:layout_height="@dimen/card_log_image_height"
            android:padding="5dp"
            app:placeholderImage="@mipmap/image_card_default"
            app:placeholderImageScaleType="fitCenter"
            />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_card_app"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:placeholderImage="@mipmap/image_card_default"
            app:placeholderImageScaleType="centerCrop"
            app:failureImage="@mipmap/image_card_default"
            app:failureImageScaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/sdv_card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_14"/>

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#909090"
                android:textSize="@dimen/textSize_12"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_card_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#909090"
                    android:textSize="@dimen/textSize_12"/>

                <TextView
                    android:id="@+id/tv_card_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="#909090"
                    android:textSize="@dimen/textSize_12"/>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#f4f4f4"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:text="@string/card_log_latest"
            android:textColor="#1c853a"
            android:textSize="@dimen/textSize_14"/>

        <ImageView
            android:id="@+id/iv_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:src="@mipmap/ic_card_log_date"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dfdfdf"/>

</LinearLayout>