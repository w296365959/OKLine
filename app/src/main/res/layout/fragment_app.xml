            android:layout_height="wrap_content"
            android:src="@mipmap/ic_search"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/apppool_enter"
        android:layout_below="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appPool"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/enter_apppool_button"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:layout_marginStart="7dp"
            android:text="@string/apppool"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/apppool_button"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hand"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_apppool_tip"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:id="@+id/app_line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"
        android:layout_below="@id/apppool_enter"/>
    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_line1"
        android:src="@mipmap/star"
        android:layout_marginTop="3dp"
        android:layout_marginStart="7dp"/>
    <View
        android:id="@+id/app_line2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"
        android:layout_below="@id/app_line1"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="7dp"
        android:layout_toRightOf="@id/star"/>
    <FrameLayout
        android:id="@+id/jiugongge_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_jiugongge_wight"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_gravity="center">
        <com.vboss.okline.ui.app.jiugongge.DraggableGridViewPager
            android:id="@+id/jiugongge_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="false"/>
        <LinearLayout
            android:id="@+id/dot_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_line2"
        android:layout_above="@id/jiugongge_bg"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <TextView
        android:id="@+id/no_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_app"
        android:drawableTop="@mipmap/no_app"
        android:drawablePadding="10dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
