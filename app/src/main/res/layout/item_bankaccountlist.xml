<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white"
    android:paddingTop="9dp"
    android:paddingBottom="9dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_centerVertical="true"
            android:id="@+id/iv_bankcardicon"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bank_logo"
            android:layout_width="37dp"
            android:layout_height="37dp" />

        <LinearLayout
            android:layout_toRightOf="@id/iv_bankcardicon"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_bankcardid"
                            android:text="招商银行信用卡"
                            android:textColor="#737373"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:ellipsize="marquee"
                            android:lines="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="@string/opaysdk_pospass"
                            android:id="@+id/tv_opaysdk_bankcard_busitype"
                            android:textColor="@color/opayStyleColor"
                            android:textSize="16sp"
                            android:layout_marginLeft="7.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_opaysdk_bankcard_tailno"
                    android:layout_marginTop="5.5dp"
                    android:text="尾号6989"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_selected"
            android:src="@drawable/icon6"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:foregroundTint="@color/opayStyleColor"
            android:foregroundTintMode="screen"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>