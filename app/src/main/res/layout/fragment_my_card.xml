<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_card_background"
    android:orientation="vertical">

    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_card_height"
        android:background="@color/white">
        <TextView
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="@string/my_card_avatar"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_user_avatar"
            android:layout_width="@dimen/my_card_avatar_width"
            android:layout_height="@dimen/my_card_avatar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/img_card_default"
            fresco:placeholderImage="@mipmap/default_avatar"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="3dp"/>

    </RelativeLayout>
    <View
        style="@style/underline_margin10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_card_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_user_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/contacts_card_phoneNum"
            android:textSize="14sp"/>

        <TextView
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="@string/my_card_name" />

    </RelativeLayout>

    <View
        style="@style/underline_margin10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_card_height"
        android:background="@color/white">
        <TextView
            style="@style/Text_14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="@string/my_card_phone"/>

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/contacts_card_phoneNum"
            android:textSize="14sp"/>

    </RelativeLayout>

</LinearLayout>