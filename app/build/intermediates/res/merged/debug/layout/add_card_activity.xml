<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_card_background"
    android:orientation="vertical">

    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/toolbar_contact_addcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@color/white">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_contact_avatar_big"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/default_avatar"
                    fresco:placeholderImage="@mipmap/default_avatar"
                    fresco:roundBottomLeft="true"
                    fresco:roundBottomRight="true"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="3dp" />


                <TextView
                    android:id="@+id/tv_edit_name"
                    style="@style/Text_14sp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_contact_avatar_big"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:text="编辑姓名" />


                <TextView
                    android:id="@+id/tv_edit_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_edit_name"
                    android:layout_toEndOf="@+id/iv_contact_avatar_big"
                    android:singleLine="true"
                    android:text="编辑号码"
                    android:textColor="@color/contacts_card_phoneNum"
                    android:textSize="13sp" />

                <View
                    style="@style/underline_no_margin"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:id="@+id/iv_edit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_edit_phone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@mipmap/pencil" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="其他通信方式"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_other_connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@mipmap/pencil" />

            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginLeft="7dp"
                android:background="@color/divider_color" />

            <com.vboss.okline.view.widget.ListViewForScrollView
                android:id="@+id/lv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:paddingBottom="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="工作名片"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/iv_pencil_workCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:src="@mipmap/pencil" />

                </LinearLayout>

                <View style="@style/underline_margin10" />


                <TextView
                    android:id="@+id/tv_company"
                    style="@style/Text_14sp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingTop="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/Text_14sp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/Text_14sp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="帐号信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_pencil_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:src="@mipmap/pencil"
                        android:visibility="visible" />

                </LinearLayout>

                <View style="@style/underline_margin10" />

                <com.vboss.okline.view.widget.ListViewForScrollView
                    android:id="@+id/lv_count_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:paddingBottom="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="13dp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="快递信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_edit_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:src="@mipmap/pencil"
                        android:visibility="visible" />

                </LinearLayout>

                <View style="@style/underline_margin10" />

                <com.vboss.okline.view.widget.ListViewForScrollView
                    android:id="@+id/lv_express_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:paddingBottom="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="13dp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_my_delivery_info"
                    style="@style/Text_14sp_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="5dp"
                    android:visibility="gone" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_save_card"
                android:layout_width="@dimen/add_button_width"
                android:layout_height="@dimen/add_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/add_button_topmargin"
                android:background="@drawable/contact_button_click_selector"
                android:gravity="center"
                android:text="@string/text_save_card"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>