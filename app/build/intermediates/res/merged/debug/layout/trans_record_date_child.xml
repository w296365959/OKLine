<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:orientation="vertical"
    android:id="@+id/cardRecord_item">
    <TextView
        android:id="@+id/trans_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天11：20"
        android:textSize="11sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"/>
    <TextView
        android:id="@+id/trans_record_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已到账"
        android:layout_toRightOf="@id/trans_record_date"
        android:textSize="11sp"
        android:textColor="#26a515"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:id="@+id/trans_otherSide_imgLayout"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/trans_otherSide_img"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="11dp"
            android:src="@mipmap/default_avatar"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trans_record_state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:id="@+id/income_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/trans_otherSide_cardImg"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:src="@mipmap/image_card_default"/>
            <TextView
                android:id="@+id/trans_otherSide_cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中信银行储蓄卡"
                android:textSize="12sp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/trans_otherSide_cardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="66666666"
                android:textColor="#7b7b7b"
                android:textSize="8sp"
                android:layout_below="@id/trans_otherSide_cardName"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/trans_to_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/income_side"
            android:layout_marginTop="9dp">
            <TextView
                android:id="@+id/trans_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textSize="9sp"
                android:layout_centerInParent="true"
                android:textColor="#ff6700"/>
            <TextView
                android:id="@+id/trans_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="9sp"
                android:layout_toRightOf="@id/trans_fuhao"
                android:layout_centerInParent="true"
                android:textColor="#ff6700"/>
            <ImageView
                android:id="@+id/trans_to_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trans_fuhao"
                android:src="@mipmap/trans_to_left"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/pay_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@id/trans_to_layout">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/trans_my_cardImg"
                android:layout_width="70dp"
                android:layout_height="42dp"
                android:src="@mipmap/image_card_default"/>
            <TextView
                android:id="@+id/trans_my_cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中信银行储蓄卡"
                android:textSize="12sp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/trans_my_cardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="777777"
                android:textSize="8sp"
                android:textColor="#7b7b7b"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/trans_my_imgLayout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/trans_my_personImg"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="11dp"
            android:src="@mipmap/default_avatar"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>