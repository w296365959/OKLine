<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_search_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarSize"
    android:background="@color/black"
    app:navigationIcon="@drawable/ic_status_back">

    <com.vboss.okline.view.widget.ClearEditText
        android:id="@+id/edit_search"
        android:layout_width="@dimen/action_search_size"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape_action_search"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="@dimen/textSize_14"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/card_search_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_14"
        />

</android.support.v7.widget.Toolbar>