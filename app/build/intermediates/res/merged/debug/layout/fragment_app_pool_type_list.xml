<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vboss.okline.ui.app.apppool.apppooltype.AppPoolTypeListFragment"
    android:orientation="vertical"
    android:background="@color/bg">

    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--<include layout="@layout/app_toolbar"/>-->
    <RelativeLayout
        android:id="@+id/apptype_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/fragment_toolbar"
        android:visibility="gone">
        <RadioGroup
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/app_title_shape"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/app_pool_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:checked="true"
                android:button="@null"
                android:background="@drawable/button_left_selector"
                android:text="@string/apppool"
                android:gravity="center"
                android:textColor="@drawable/radiobutton_textcolor_selector"
                android:textSize="14sp"/>
            <RadioButton
                android:id="@+id/card_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/button_right_selector"
                android:text="@string/app_card"
                android:textColor="@drawable/radiobutton_textcolor_selector"
                android:textSize="14sp"/>
        </RadioGroup>
    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptrFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close_either="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        android:layout_below="@id/apptype_action_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/apptype_action_bar">
            <TextView
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg"
                android:visibility="gone"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/apptype_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>

        </LinearLayout>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    <LinearLayout
        android:id="@+id/apptype_no_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone">
        <ImageView
            android:id="@+id/apptype_no_app_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/no_app"/>
        <TextView
            android:id="@+id/apptype_no_app_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/no_app"/>
    </LinearLayout>
</RelativeLayout>
