<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="7dp">

        <TextView
            android:id="@+id/trans_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利益"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/trans_pay_img"/>
        <TextView
            android:id="@+id/trans_pay_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123123"
            android:textSize="10sp"
            android:textColor="#8f8f8f"
            android:layout_below="@id/trans_pay_name"
            android:layout_toRightOf="@id/trans_pay_img"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line"
            android:layout_toRightOf="@id/trans_pay_img"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/trans_pay_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账金额:"
            android:textSize="14sp"
            android:layout_marginLeft="59dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="198.00"
            android:textSize="14sp"
            android:visibility="gone"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入转账金额"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="@color/app_line"/>
    </LinearLayout>
</LinearLayout>
