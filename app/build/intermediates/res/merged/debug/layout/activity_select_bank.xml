<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_select_bank"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/selectBank_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@android:color/black">
        <RelativeLayout
            android:id="@+id/action_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:paddingEnd="@dimen/margin_5"
            >

            <ImageButton
                android:id="@+id/action_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_status_back"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_logo"
                android:layout_width="@dimen/actionBar_logo_width"
                android:layout_height="@dimen/actionBar_logo_height"
                android:layout_marginTop="5dp"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@mipmap/logo"
                app:placeholderImageScaleType="fitCenter"/>

            <TextView
                android:id="@+id/action_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/actionBarTitleSize"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/action_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingStart="@dimen/margin_5"
            >

            <ImageButton
                android:id="@+id/action_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_search"
                android:visibility="visible"
                />

        </RelativeLayout>
    </RelativeLayout>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/trans_ptrFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_card_background"
        cube_ptr:ptr_duration_to_close_either="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        android:layout_below="@id/selectBank_toolbar">
    <ListView
        android:id="@+id/bank_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:fadingEdge="none"
        android:focusable="true"
        android:groupIndicator="@null"
        android:scrollbars="none"
        android:scrollingCache="true"
        android:overScrollMode="never"/>
</in.srain.cube.views.ptr.PtrClassicFrameLayout>
    <TextView
        android:id="@+id/select_bank_dialog"
        android:layout_width="@dimen/contact_slide_dialog_width"
        android:layout_height="@dimen/contact_slide_dialog_height"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_sidebar_text_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/contact_middle_text"
        android:visibility="invisible" />

    <com.vboss.okline.view.widget.SideBar
        android:id="@+id/select_bank_sidebar"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="150dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>
