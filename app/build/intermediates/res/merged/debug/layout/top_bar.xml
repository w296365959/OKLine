<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">

    <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49.5dp">

        <LinearLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                >

            <View android:layout_width="8.5dp" android:layout_height="match_parent"
                    />

            <RelativeLayout
                    android:id="@+id/iv_left_parent"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="7.5dp"
                    android:background="@drawable/bg_btn_click"
                    >

                <ImageView android:id="@+id/iv_left"
                           android:layout_centerVertical="true"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:src="@drawable/rp_backward"
                        />
                <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_left_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_left"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/common_text_light_dark_color"
                        android:text="返回"
                        android:textSize="16dp"
                        />
            </RelativeLayout>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/common_text_light_dark_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_centerInParent="true"/>

        <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/iv_right_rss_parent"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/common_margin_10"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_right_search_parent"
                    android:background="@drawable/bg_btn_click"
                    >
                <ImageView android:id="@+id/iv_right_rss"
                           android:layout_centerInParent="true"
                           android:layout_width="wrap_content"
                           android:layout_height="30dp"

                        />
            </RelativeLayout>


            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/tv_right_parent"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/common_margin_10"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_right_parent"
                    android:background="@drawable/bg_btn_click"
                    >
                <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_right"

                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/common_text_light_dark_color"
                        />
            </RelativeLayout>
            <View android:layout_width="8.5dp" android:layout_height="match_parent"/>
        </LinearLayout>

    </RelativeLayout>
    <View android:id="@+id/topbar_line"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e5e5e5"/>
</LinearLayout>