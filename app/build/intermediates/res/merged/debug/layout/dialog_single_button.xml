<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_single_width"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_single_top"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="22dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/app_name"
            android:textColor="#808080"
            android:textSize="@dimen/textSize_14"
            />

        <TextView
            android:id="@+id/tv_dialog_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="#3e3e3e"
            android:textSize="@dimen/textSize_14"
            android:visibility="gone"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c2c2c2"/>

    <TextView
        android:id="@+id/tv_dialog_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_single_bottom"
        android:gravity="center"
        android:padding="18dp"
        android:text="@string/dialog_single_ensure"
        android:textColor="@color/color_dialog_default_ok"
        android:textSize="@dimen/textSize_14"
        />

</LinearLayout>