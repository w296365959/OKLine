<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/face_circle_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="48dip">

        <RelativeLayout
            android:id="@+id/face_nav_title_bar_back_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/face_nav_title_bar_back_img"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/face_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/face_nav_title_bar_back_img"
                android:text="@string/face_detect_top_back_text"
                android:textColor="#505156"
                android:textSize="16dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/face_nav_title_bar_sound_button"
            android:layout_width="25dip"
            android:layout_height="23dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="11dp"

            android:background="@drawable/face_top_sound_on"
            android:visibility="gone"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/face_auth_preview_layout"
        android:layout_width="157dip"
        android:layout_height="157dip"
        android:layout_below="@+id/face_circle_titlebar"
        android:layout_marginTop="180px"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/face_auth_scan_rect_blue"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/face_scan_rect_blue"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/face_auth_scan_rect_green"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/face_scan_rect_green"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <com.alibaba.security.biometrics.face.auth.widget.CircleMaskFrameLayout
            android:id="@+id/face_circle_mask_framelayout"
            android:layout_width="146dip"
            android:layout_height="146dip"
            android:layout_centerInParent="true"
            app:facelivnesssdk_enabled="true" >

            <com.alibaba.security.biometrics.face.auth.widget.CameraSurfaceView
                android:id="@+id/face_circle_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.alibaba.security.biometrics.face.auth.widget.CircleMaskFrameLayout>

        <com.alibaba.security.biometrics.face.auth.widget.Circle
            android:id="@+id/face_circle_outter_circle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignLeft="@id/face_circle_mask_framelayout"
            android:layout_alignTop="@id/face_circle_mask_framelayout"
            android:layout_gravity="center"
            app:facelivnesssdk_process_color="#ff7700"
            app:facelivnesssdk_color="#00abed"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/face_auth_scan_line"
            android:layout_alignLeft="@+id/face_auth_scan_rect_blue"
            android:layout_alignTop="@+id/face_auth_scan_rect_blue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/face_scan_line"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/face_captcha_title_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/face_detect_action_movein_circle"
        android:textColor="#686c70"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/face_auth_preview_layout"
        android:layout_marginTop="190dip"/>

    <ImageView
        android:id="@+id/face_logo"
        android:layout_width="141dip"
        android:layout_height="20dip"
        android:background="@drawable/juanquan"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
