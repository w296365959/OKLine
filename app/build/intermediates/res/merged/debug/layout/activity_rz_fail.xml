<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rz_fail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F4F4F4"
    android:orientation="vertical"
    tools:context="com.vboss.okline.ui.auth.VerifyFailActivity">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="30dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fail_ol_icon"
            android:layout_marginBottom="20dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/tip3"
            android:layout_marginBottom="10dip"
            android:textSize="18sp" />

        <TextView  android:id="@+id/tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8E8E8E"
            android:text="@string/tip4"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:textSize="15sp" />

    </LinearLayout>

    <Button android:id="@+id/btn_again_sumbit"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/shape_card_open_green"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/again_submit" />
</LinearLayout>
