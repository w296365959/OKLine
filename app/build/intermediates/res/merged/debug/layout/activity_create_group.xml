<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.vboss.okline.base.helper.FragmentToolbar
        android:id="@+id/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/toolbar_contact"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />-->
        <HorizontalScrollView
            android:id="@+id/horizonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/search_black" />
            </LinearLayout>
        </HorizontalScrollView>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="搜索"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/no_result"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/ll_top"
        android:visibility="gone">
        <ImageView
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="7dp"
            android:src="@drawable/search_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_img"
            android:paddingLeft="22dp">
            <TextView
                android:id="@+id/search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索 : "
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/search_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_tv"
                android:textColor="#0eb7f5"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_content"
                android:paddingTop="5dp"
                android:text="无结果"
                android:textColor="#787878"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_line"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf" />

        <TextView
            android:id="@+id/tv_search_count"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_search_count_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:text="@string/search"
            android:textSize="@dimen/textSize_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dfdfdf" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_group_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_count"
        android:choiceMode="multipleChoice"
        android:descendantFocusability="afterDescendants"
        android:divider="@null"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <com.vboss.okline.view.widget.SideBar
        android:id="@+id/sidebar"
        android:layout_width="@dimen/contact_slidebar_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="135dp"
        android:visibility="gone" />
</RelativeLayout>