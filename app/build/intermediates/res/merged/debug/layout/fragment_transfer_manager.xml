<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/transter_accounts_people"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:background="@mipmap/default_avatar" />
            <TextView
                android:id="@+id/transter_accounts_peopleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/transter_accounts_people"
                android:text="孙悟空"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/transter_accounts_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/content_text_color"
                android:textSize="9sp"
                android:layout_toEndOf="@id/transter_accounts_people"
                android:layout_below="@id/transter_accounts_peopleName"
                android:text="sdoaklakl"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/transManager_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/trans_manager_phone"/>
        <ImageView
            android:id="@+id/transManager_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/trans_manager_chat"/>
        <ImageView
            android:id="@+id/transManager_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/trans_manager_email"/>
        <ImageView
            android:id="@+id/transManager_trans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/trans_manager_trans"/>
        <ImageView
            android:id="@+id/transManager_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/trans_manager_delivery"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/to_transfer"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="给他转账"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@mipmap/trans_button_bg"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/trans_manager_trans"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView2" />
    </RelativeLayout>
    <!--<in.srain.cube.views.ptr.PtrClassicFrameLayout-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/trans_ptrFrameLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white"-->
        <!--cube_ptr:ptr_duration_to_close_either="1000"-->
        <!--cube_ptr:ptr_keep_header_when_refresh="true"-->
        <!--cube_ptr:ptr_pull_to_fresh="false"-->
        <!--cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"-->
        <!--cube_ptr:ptr_resistance="1.7">-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/trans_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <LinearLayout
            android:id="@+id/no_trans_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:background="@color/app_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无转账记录"
                android:textColor="#737373"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"/>
        </LinearLayout>
    <!--</in.srain.cube.views.ptr.PtrClassicFrameLayout>-->
</LinearLayout>
