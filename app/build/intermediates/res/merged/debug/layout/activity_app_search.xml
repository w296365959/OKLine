<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/action_back_layout"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:clickable="true">

            <ImageButton
                android:id="@+id/action_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_toolbar_back"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_more"
            android:layout_width="@dimen/actionBarSize"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:contentDescription="@string/tab_card"
            android:src="@mipmap/ic_contacts_add"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/action_back_layout">
            <!-- modify by yuanshaoyu 2017-06-21 Added logoView-->
            <com.vboss.okline.ui.card.widget.LogoView
                android:id="@+id/logoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Added by yuanshaoyu 2017-06-21 battery capacity view -->
            <com.vboss.okline.view.widget.OKCardView
                android:id="@+id/ocardView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_toEndOf="@id/logoView"
                />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/logo"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/logo_animation"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignBottom="@id/iv"
                android:layout_alignStart="@id/iv"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="1.8dp"
                android:contentDescription="@string/app_name"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/rl_logo"
            android:layout_toStartOf="@id/tv_cancel"
            android:background="@drawable/shape_card_search_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tab_card"
                android:src="@mipmap/ic_card_search"/>

            <com.vboss.okline.view.widget.ClearEditText
                android:id="@+id/edt_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:background="@color/transparent"
                android:hint="输入应用名称的关键字"
                android:singleLine="true"
                android:textSize="14sp"
                android:imeOptions="actionSearch"/>

        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_toolbar"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_app_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:overScrollMode="never"/>
        <RelativeLayout
            android:id="@+id/no_result"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_gray"
                android:layout_centerVertical="true"
                android:paddingLeft="7dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_img"
                android:paddingLeft="22dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/search_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索 : "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/search_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#0eb7f5"
                    android:layout_toRightOf="@id/search_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无结果"
                    android:paddingTop="5dp"
                    android:textColor="#787878"
                    android:layout_below="@id/search_content"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/app_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_toolbar"
        android:alpha="0.2"
        android:background="#50000000"
        android:visibility="visible"/>

</RelativeLayout>