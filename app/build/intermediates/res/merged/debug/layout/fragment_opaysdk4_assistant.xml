<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="423dp"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher_no_background" />

            <TextView
                android:id="@+id/tv_paypophint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="输入银行卡密码"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_paypopcancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12.5dp"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_pwdface2"
                android:layout_marginTop="37dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="@drawable/shape_pwdoutline1">

                        <ImageView
                            android:id="@+id/bankpsw_dot6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/shape_dot"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:text="忘记密码?"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gv_bankkeyboard"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="200dp"
        android:paddingTop="0.5dp"
        android:background="@android:color/darker_gray"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_bankpwdkey1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:width="0dp"
            
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="8"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey9"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="9"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkeyblank"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:clickable="false"
            android:gravity="center"
            android:text="    "
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <TextView
            android:id="@+id/btn_bankpwdkey0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="0.5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/digit_keyboard_text_size" />

        <RelativeLayout
            android:id="@+id/btn_bankpwdkeydel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1">


            <ImageView
                android:id="@+id/tv_pwdkeydel"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:layout_centerInParent="true"
                android:src="@drawable/left_arrow" />

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>