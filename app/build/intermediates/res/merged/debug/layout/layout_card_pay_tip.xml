<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout_card_pay_tip"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_card_member_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_balance"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_14"
        />

    <TextView
        android:id="@+id/tv_card_member_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/card_integral"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_14"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/card_pay_tip"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_12"/>

</LinearLayout>