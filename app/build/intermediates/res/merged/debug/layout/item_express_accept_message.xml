<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/express_msg_accept_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginLeft="@dimen/common_margin_10"
    android:layout_marginTop="@dimen/margin_7"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/express_accept_user_img"
        android:layout_width="@dimen/height_40"
        android:layout_height="@dimen/height_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_7"
        android:layout_marginRight="@dimen/margin_13"
        android:src="@mipmap/default_avatar"
        fresco:placeholderImage="@mipmap/logo2"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="3dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/express_accept_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:text="杨新"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/express_accept_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13616535488"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收快递地址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/express_accept_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="收货地址"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />

            </LinearLayout>

            <TextView
                android:id="@+id/express_update_accept_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_26"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/bg_shape_textview_unselector"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="添加/修改地址"
                android:textColor="@color/express_green"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/express_other_confirmed_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_26"
                android:layout_marginBottom="@dimen/padding_5"
                android:layout_marginTop="@dimen/common_margin_5"
                android:paddingBottom="4dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="待对方确认收货地址"
                android:textColor="@color/brick_red"
                android:textSize="@dimen/textSize_14"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/express_accept_message_comfirmed_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:src="@drawable/express_confirmed"
           />
    </FrameLayout>
</LinearLayout>




