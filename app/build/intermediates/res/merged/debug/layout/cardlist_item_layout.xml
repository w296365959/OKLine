<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_gravity="center_vertical">
    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/app_cardImg"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:padding="4.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        app:actualImageScaleType="fitXY"
        app:placeholderImageScaleType="fitXY"
        app:placeholderImage ="@mipmap/image_card_default"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="7dp"/>
    <ImageView
        android:id="@+id/open_card_tip"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_alignRight="@id/app_cardImg"
        android:layout_alignTop="@id/app_cardImg"
        android:layout_marginRight="3.5dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/open_card_tip"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/app_cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_card_name"
        android:layout_toRightOf="@id/app_cardImg"
        android:layout_marginLeft="10dp"
        android:text="卡名称"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/app_cardMerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_card_mer_name"
        android:textColor="@color/app_card_mername_color"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/app_card_mername_marginTop"
        android:text="发卡商"
        android:layout_marginRight="10dp"
        android:layout_below="@id/app_cardName"
        android:layout_toRightOf="@id/app_cardImg"
        />
</RelativeLayout>
