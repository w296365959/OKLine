<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/transparent"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/margin_302"
        android:layout_height="@dimen/margin_478"
        android:layout_gravity="center"
        android:background="@drawable/bg_shape_card_notice">

        <!-- amount layout -->
        <FrameLayout
            android:id="@+id/layout_frame_amount"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_centerHorizontal="true">

            <!-- card amount balance layout -->
            <LinearLayout
                android:id="@+id/layout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:textSize="23sp"
                    />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#545454"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- vip card amount balance integral layout-->
            <LinearLayout
                android:id="@+id/layout_vip_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vip_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#545454"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_vip_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:textColor="#545454"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vip_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#545454"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_vip_remainder_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textColor="#545454"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_card_notice_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_frame_amount"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_card_notice_success_1"/>

        <ImageButton
            android:id="@+id/ib_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_card_notice_state"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="28dp"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_card_notice_voice"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="246dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:background="@drawable/shape_card_notice_btn_1_background"
            android:gravity="center"
            android:textColor="@color/white"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_card_image"
            android:layout_width="259dp"
            android:layout_height="163dp"
            android:layout_below="@id/iv_card_notice_state"
            android:layout_centerHorizontal="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@mipmap/image_card_default"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundedCornerRadius="5dp"/>


        <LinearLayout
            android:id="@+id/layout_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ensure"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/ib_print_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/app_card"
                android:src="@mipmap/ic_print_ticket"/>

            <ImageButton
                android:id="@+id/ib_print_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:background="@color/transparent"
                android:contentDescription="@string/app_card"
                android:src="@mipmap/ic_print_pos"/>

            <ImageButton
                android:id="@+id/ib_print_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/app_card"
                android:src="@mipmap/ic_print_invoice"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_ensure"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="@string/notify_no_enough_balance"
            android:textColor="#ff6600"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:textColor="#25a314"
            android:visibility="gone"
            />

    </RelativeLayout>

</FrameLayout>