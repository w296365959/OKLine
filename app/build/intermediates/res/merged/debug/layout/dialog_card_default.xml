<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_card_default_width"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_default"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_default_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_card_default_top"
        android:gravity="center"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/dialog_card_default_title"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_card_default_size"/>

    <TextView
        android:id="@+id/tv_dialog_default_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_card_default_top"
        android:gravity="center"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/color_dialog_default_cancel"
        android:text="@string/dialog_card_default_title"
        android:textSize="@dimen/dialog_card_default_size"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:alpha="0.4"
        android:background="@color/color_dialog_default_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_default_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_card_default_height"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_dialog_default_cancel"
            android:text="@string/dialog_card_default_cancel"
            android:textSize="@dimen/dialog_card_default_size"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dialog_card_default_height"
            android:alpha="0.4"
            android:background="@color/color_dialog_default_line"
            />

        <TextView
            android:id="@+id/tv_dialog_default_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_card_default_height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_card_default_ok"
            android:textColor="@color/color_dialog_default_ok"
            android:textSize="@dimen/dialog_card_default_size"/>
    </LinearLayout>

</LinearLayout>