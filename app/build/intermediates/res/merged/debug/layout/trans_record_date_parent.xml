<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/line_gray_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/view2" />

    <TextView
        android:id="@+id/text_record_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <RelativeLayout
        android:id="@+id/trans_record_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/trans_record_num_bg"
        android:layout_toRightOf="@id/text_record_date_title"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/trans_record__num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/line_gray_horizontal"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/arrow_record_date_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:src="@mipmap/downwards"
        android:layout_below="@+id/view2"
        android:layout_alignParentEnd="true" />
</RelativeLayout>