<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="com.vboss.okline.ui.user.CardOpenAuthenticFragment">

    <include layout="@layout/app_fragment_toolbar_v2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/bank_logo" />

        <TextView
            android:id="@+id/tv_merName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="中国银行"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:background="#f4f4f4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/info_authentication_alert"
            android:textColor="#222"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="4dp"
        android:paddingStart="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_open_info_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_name"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_card_default_size"/>

            <TextView
                android:id="@+id/tv_card_open_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_name"
                android:textSize="@dimen/card_open_info_size"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="7dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_open_info_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_ID"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_card_default_size"/>

            <TextView
                android:id="@+id/tv_card_open_info_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_ID"
                android:textSize="@dimen/card_open_info_size"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="7dp"
            android:background="#e0e0e0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_open_info_item_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_card_default_size"/>

            <TextView
                android:id="@+id/tv_card_open_info_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/card_open_info_margin_left"
                android:text="@string/card_open_info_mobile"
                android:textSize="@dimen/card_open_info_size"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="7dp"
            android:background="#e0e0e0"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_approve"
        android:layout_width="66.7dp"
        android:layout_height="66.7dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:background="@drawable/shape_round_green"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/authentication_approved" />

</LinearLayout>
