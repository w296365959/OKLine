<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <include layout="@layout/app_search_bar"/>

    <LinearLayout
        android:id="@+id/search_app_title"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_search_result"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/search_result_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¼‰"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hot_app_title"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="@string/hot_app"
        android:textSize="15sp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:paddingLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_search_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <!--<TextView
            android:id="@+id/search_no_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_search_result"
            android:layout_centerInParent="true"
            android:visibility="gone"/>-->
    </LinearLayout>

</LinearLayout>
