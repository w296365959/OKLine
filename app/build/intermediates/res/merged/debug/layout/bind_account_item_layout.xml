<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bind__Account"
        android:layout_width="match_parent"
        android:layout_height="63dp"

        android:background="@color/white">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bindAccount_cardicon"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@mipmap/image_card_default" />
        <RelativeLayout
            android:id="@+id/bindAccount_cardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/bindAccount_cardicon">
            <TextView
                android:id="@+id/bindAccount_cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="建设银行储蓄卡"
                android:textColor="#737373"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/bindAccount_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@id/bindAccount_cardName"
                android:text="张三"
                android:textColor="#737373"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/bindAccount_cardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bindAccount_cardName"
                android:layout_marginLeft="10dp"
                android:text="55555"
                android:textColor="#737373"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_line"/>
    </RelativeLayout>
