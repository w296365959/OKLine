<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/apppool_title_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_pool_newApp_title_height"
            android:text="@string/apptype"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_pool_newApp_title_marginLeft"
            android:textColor="@color/black"
            android:textSize="@dimen/app_pool_newApp_title_name"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/app_line"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/type_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_pool_type_item_height"
        android:layout_below="@id/apppool_title_type"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/apptype_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/nav_card_normal"
            android:layout_marginLeft="@dimen/app_pool_type_item_marginLeft"/>
        <TextView
            android:id="@+id/apptype_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_pool_newApp_title_name"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/apptype_icon"
            android:layout_marginLeft="@dimen/app_pool_type_name_marginLeft"/>
        <ImageView
            android:id="@+id/apptype_right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/to_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/listview_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line"
        android:layout_below="@id/type_app"/>


</RelativeLayout>
