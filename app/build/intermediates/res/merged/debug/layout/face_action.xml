            android:id="@+id/actionText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/actionNormalImage1"
            android:layout_alignTop="@id/actionNormalImage1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dip"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:visibility="gone"/> -->

        <ImageView
            android:id="@+id/line2to3"
            android:layout_width="26dip"
            android:layout_height="5dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/actionNormalImage2"
            android:background="@drawable/face_num_line" />

        <ImageView
            android:id="@+id/actionNormalImage3"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/line2to3"
            android:background="@drawable/face_num_3_normal" />

        <ImageView
            android:id="@+id/actionFinishImage3"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/actionNormalImage3"
            android:layout_alignTop="@id/actionNormalImage3"
            android:background="@drawable/face_num_3_finish"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/actionActiveImage3"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/actionNormalImage3"
            android:layout_alignTop="@id/actionNormalImage3"
            android:background="@drawable/face_num_3_active"
            android:visibility="gone" />

