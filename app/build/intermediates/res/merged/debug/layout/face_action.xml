            android:layout_alignLeft="@id/actionNormalImage2"
            android:layout_alignTop="@id/actionNormalImage2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dip"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="28sp" /> -->

        <ImageView
            android:id="@+id/line1to2"
            android:layout_width="26dip"
            android:layout_height="5dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/actionNormalImage2"
            android:background="@drawable/face_num_line" />

        <ImageView
            android:id="@+id/actionNormalImage1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/line1to2"
            android:background="@drawable/face_num_1_normal" />

        <ImageView
            android:id="@+id/actionFinishImage1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/actionNormalImage1"
            android:layout_alignTop="@id/actionNormalImage1"
            android:background="@drawable/face_num_1_finish"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/actionActiveImage1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/actionNormalImage1"
            android:layout_alignTop="@id/actionNormalImage1"
            android:background="@drawable/face_num_1_active"
            android:visibility="gone" />

