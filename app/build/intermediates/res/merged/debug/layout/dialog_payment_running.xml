<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="145dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_black_withcorner_backgound"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:background="@drawable/shape_black_withcorner_backgound"
        android:orientation="vertical">

        <View
            android:id="@+id/header_placeholder"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/loadinglogo" />

        <View
            android:id="@+id/footer_placeholder"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_payment_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:text="正在支付"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_payment_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/loading001" />
    </LinearLayout>

</LinearLayout>