<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/app_fragment_toolbar_v2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="6dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/card_open_info_tip"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_open_info_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_card_default_size"/>

                <TextView
                    android:id="@+id/tv_card_open_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_name"
                    android:textSize="@dimen/card_open_info_size"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="7dp"
                android:background="#e0e0e0"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_open_info_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_card_default_size"/>

                <TextView
                    android:id="@+id/tv_card_open_info_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_ID"
                    android:textSize="@dimen/card_open_info_size"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/card_open_info_margin_left"
                android:background="#e0e0e0"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_open_info_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_mobile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_card_default_size"/>

                <TextView
                    android:id="@+id/tv_card_open_info_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/card_open_info_margin_left"
                    android:text="@string/card_open_info_mobile"
                    android:textSize="@dimen/card_open_info_size"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="7dp"
                android:background="#e0e0e0"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_card_open_info_ensure"
        android:layout_width="66.7dp"
        android:layout_height="66.7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/shape_round_green"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="13dp"
        android:text="同意"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_card_default_size"
        />


</LinearLayout>