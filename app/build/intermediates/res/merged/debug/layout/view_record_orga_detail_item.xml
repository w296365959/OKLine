<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="20175月12号 08:09:12"
            android:textColor="@color/black_light"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/name_institution_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:text="上海地铁"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/amout_delta_institution_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额-2.00"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/points_delta_institution_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分+10"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/detail_institution_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/name_institution_date"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="上车1号线湘湖站，下车4号线城星路站"
                android:textColor="@color/darker_gray"
                android:textSize="12dp" />

            <include layout="@layout/view_record_detail_item_pp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/line_gray_horizontal"
        android:layout_alignParentBottom="true" />
</LinearLayout>