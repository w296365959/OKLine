<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/trans_list_item"
    android:background="@drawable/trans_record_bg"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp">
        <ImageView
            android:id="@+id/trans_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/trans_to_outside"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/trans_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="杨欣"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/trans_direction"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/trans_record_bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国银行"
        android:textSize="12sp"
        android:textColor="#5e5e5e"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>
</LinearLayout>
