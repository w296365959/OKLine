<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/avatar0"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar_record_by_person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tip_record_by_person"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/view_red_tip_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/avatar0"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname_record_by_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张某某"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/markname_record_by_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（老婆）"
                android:textColor="@color/gray_normal"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/event_tag_record_by_person"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ease_chat_voice_call_receive" />

            <TextView
                android:id="@+id/event_time_record_by_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="2017年04月01日 21:46" />

            <TextView
                android:id="@+id/event_content__record_by_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/event_time_record_by_person"
                android:layout_toRightOf="@id/event_tag_record_by_person"
                android:ellipsize="end"
                android:lines="1" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>