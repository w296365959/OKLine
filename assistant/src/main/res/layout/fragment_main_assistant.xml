<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    tools:context=".ui.recharge.MainFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_card"
            android:layout_width="237dp"
            android:layout_height="150dp"
            android:layout_marginBottom="13dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:src="@drawable/image_card_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:text="卡内余额：¥0.00"
            android:id="@+id/tv_card_balance"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:background="#fff"
        android:paddingStart="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1、请选择金额"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_recharge_amout"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:text="¥ 200.00"
                android:textColor="#000"
                android:id="@+id/tv_recharge_amout"
                android:layout_marginEnd="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/arrow_down"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <GridView
        android:id="@+id/gv_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:verticalSpacing="5dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:background="#fff"
        android:paddingStart="6dp"
        android:paddingTop="10dp"
        android:id="@+id/rl_step2"
        android:visibility="gone"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="2、请选择支付通道"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.okline.vboss.assistant.ui.recharge.PaymentLauchLayout
        android:id="@+id/pll_bank_list"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/view_button_blue_background"
        android:padding="10dp"
        android:visibility="gone"
        android:text="确认"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
