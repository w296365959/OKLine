<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="344dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_default"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_default_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/dialog_recharge_give_up"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_dialog_default_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/dialog_recharge_give_up_content"
        android:textColor="#7f7f7f"
        android:textSize="13sp"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="16dp"
        android:background="#c2c2c2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_single_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_default_cancel"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_no"
            android:textColor="#7f7f7f"
            android:textSize="12sp"/>

        <View
            android:layout_width="0.3dp"
            android:layout_height="51dp"
            android:background="#c2c2c2"
            />

        <TextView
            android:id="@+id/tv_dialog_default_ok"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_yes"
            android:textColor="#32a9fd"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>