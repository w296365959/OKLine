<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_card_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_line_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/color_gray_f4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:drawablePadding="3dp"
            android:drawableStart="@mipmap/ic_card_down"
            android:gravity="center_vertical"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:text="@string/card_down"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/color_line_gray"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simple"
                android:layout_width="190dp"
                android:layout_height="126dp"
                android:padding="7dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundedCornerRadius="3.5dp"
                />

            <ImageView
                android:id="@+id/iv_downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:contentDescription="@string/card_down"
                android:src="@mipmap/ic_downloaded"
                android:visibility="invisible"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/layout_card_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_card_issuer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_gray_9f"
                android:textSize="12sp"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/tv_card_recharge"
                android:layout_width="66dp"
                android:layout_height="25dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_green"
                android:gravity="center"
                android:text="@string/card_recharge"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/layout_card_img"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="7dp"
            android:textColor="@color/color_gray_9e"
            android:textSize="11sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_card_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginStart="5.5dp"
        android:background="@color/color_line_gray"/>

</LinearLayout>